/* socialSecurity/ssIncreaseStaff/ssIncreaseStaff.wxss */
.container{
  padding: 0;
  height: auto;
  width: 100%;
  background-color: #ffffff;
  border-style: none;
  border-color: #222222;
  box-shadow: 0 0 5px rgba(0, 0, 0, 0.2); 
  position: relative; 
}
.logo{
  /* position: relative; */
  background-color: #494949;
  height: 40px;
  width: 100%;
}
.form{
  margin: 20px 15px 0;
  padding: 0 0 20px;
}
.info{
    border-bottom-style: dotted;
    border-bottom-width: 1px;
    border-bottom-color: #cccccc;
    padding: 0 6px 10px 6px;
    font-family: "微软雅黑";
    font-style: normal;
    font-weight: bold;
    font-size: 20px;
    color: #333333;
    margin: 0 0 5px;
}
.form-item {
    padding: 10px 0;
    position: relative;
}
.form-item .label{
    display: block;    
    font-family: "微软雅黑";
    font-style: normal;
    font-weight: bold;
    font-size: 90%;
    color: #333333;
    padding: 3px 0 10px 0;
}
.form-item .input-text{
  font-style: normal;
  font-weight: normal;
  height: 40px;
  font-size: 90%;
  padding: 8px;
  border: 1px solid #ddd;
  box-sizing: border-box;
}
.form-item .explain{
    font-family: "微软雅黑";
    font-style: normal;
    font-weight: normal;   
    color: #444444;
}
.form-item .age{
   font-size: 60%;
}
.form-item .time{
  font-size: 50%;
}
.form-item .textarea-text{
    width: 100%;
    height: 70px;
    box-sizing: border-box;
    border: 1px solid #ddd;
    color: #333;
}
.form-item .checkbox-item{
  padding: 5px 5px 10px 5px;
  font-size: 14px;
  font-family: "微软雅黑";
  line-height: 150%;
}
.form-item .checkbox-item .cb{
  transform: scale(0.8,0.8);
}
.form-item .p{
  display: block;
  padding: 5px;
  font-size: 14px;
  line-height: 150%;
}
.form-item .b{
  color:#ff0000;
  font-weight: bold;
  font-size: 14px;
}