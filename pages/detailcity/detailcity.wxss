/* pages/detailcity/detailcity.wxss */
page{
  width: 100%;
  height: 100%;

}
.screen{
  width: 100%;
  height: 100%;
}
.nav{
  width: 100%;
}
.title{
  width: 100%;
  margin: 20rpx 0;
}
.screenTitle{
  font-weight: bold;
  font-size: 36rpx;
  margin-left: 20rpx;
}
.content{
  width: 100%;
  height: 100%;
  /* background: saddlebrown; */
}

.item{
  width: 28%;
  background: #f5f5f5;
  text-align: center;
  float: left;
  margin: 0 20rpx 20rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #676767;
  font-weight: bold;

}
.content:after {
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}
.button{
  width: 100%;
  display: flex;
  align-items: center;
  height: 120rpx;
  border-top: 4rpx solid #ececec

}
.button1{
  width: 20%;
  height: 80rpx;
  font-size: 32rpx;
  color: #676767;
}
.button2{
  width: 70%;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background: #ad3434

}
.center{
  width: 100%;
  padding-bottom: 30rpx;
}
.active{
  background: #ad3434

}
.active1{
  background: #ad3434

}
.active2{
  background: #ad3434

}
.active3{
  background: #ad3434

}