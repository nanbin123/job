/* pages/position_classification/positionClassification.wxss */
page {
  width: 100%;
  height: 100%
}

.positionClassification {
  width: 100%;
  height: 100%;
  padding: 0 34rpx;
  box-sizing: border-box;
}

.jobSearch {
  width: 100%;
  height: 110rpx;
  position: relative;
}

.search {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}
input {
  width: 100%;
  height: 100rpx;
  padding-left: 90rpx;
  border-bottom: 4rpx solid #f4f4f4;
}
.jobList{
  position: relative;
  width: 100%;
  height: calc(100% - 110rpx);
}
.jobItem{
  display: block;
  font-size: 34rpx;
  padding: 50rpx 0 ;
  border-bottom: 4rpx solid #dcdcdc;

}
.bg {
  display: none;
  position: absolute;
  top: 110rpx;
  left: 0%;
  z-index: -20;
  width: 100%;
  height: calc(100% - 110rpx);
  background-color: black;
  z-index: 1001;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}
 
.show {
  display: none;
  position: absolute;  
  left: 20%;
  top: 110rpx;
  width: 80%;
  height: calc(100% - 110rpx);
  background-color: white;
  z-index: 1002;
  overflow: auto;
}
.menu{
  width: 100%;
    height: 100%;
  display: flex;
}
.left{
  width: 50%;
  height: 100%;
  background: #bdb2b2;
  border-right: 4rpx solid #e8e9f7;
  overflow: hidden;
  text-align: center;

}
.right{
  width: 50%;
  height: 100%;
  overflow: hidden;
  text-align: center;


}
.scroll{
  width: 100%;
  height: 100%;
}
.listItem{
  width: 100%;
  display: block;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  overflow: hidden;
  font-weight: bold;
}
.listItem1{
  width: 100%;
  display: block;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  overflow: hidden
}
.actives{
  color: #ad3434
}
.hosList{
  width: 100%;
  height: calc(100% - 110rpx);
  position: relative;
  overflow: hidden;
  background: #fff;
  z-index: 999999999;
}
.scroll1{
  height: 100%;
  width: 100%;

}
.hosItem{
  display: block;
  padding: 26rpx 0;
  font-size: 32rpx;
  border-bottom: 4rpx solid #e8e9f7;
}
